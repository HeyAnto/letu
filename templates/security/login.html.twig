{% extends 'profil-base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block main %}
<section class="flex flex-column gap-15">
    <div>
        <h1>Connectez-vous</h1>
        <p>Pas de compte ? <a class="text-link" href="{{ path('connexion_register') }}">Inscrivez-vous</a> !</p>
    </div>

    <form method="post">
        {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required
                autofocus placeholder="exemple@email.com">
        </div>

        <div>
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div>
            <label class="flex gap-4">
                <input type="checkbox" name="_remember_me"> Ce souvenir de moi
            </label>
        </div>

        <button class="btn btn-green" type="submit">
            Se connecter
        </button>
    </form>
</section>
{% endblock %}