{% extends 'admin/admin-base.html.twig' %}

{% block javascripts %}
{% block importmap %}
{{ importmap(['app-admin', 'delete-modal']) }}
{% endblock %}
{% endblock %}

{% block main %}
<section class="flex pt-15 gap-7">
  <a class="btn" href="{{ path('admin_ingredient_index') }}">Retour à la liste</a>
  <a class="btn" href="{{ path('admin_ingredient_edit', { id: ingredient.id }) }}">Modifier l'ingredient</a>
  <a class="btn btn-red delete-action" data-url="{{ path('admin_ingredient_delete', { id: ingredient.id }) }}">
    Supprimer l'ingredient
  </a>
</section>

<section class="flex flex-column pt-15 gap-15">
  <h1>{{ ingredient.label }}</h1>

  <table class="table">
    <tbody>
      <tr>
        <th>ID</th>
        <td>{{ ingredient.id }}</td>
      </tr>

      <tr>
        <th>Label</th>
        <td>{{ ingredient.label }}</td>
      </tr>

      <tr>
        <th>Image</th>
        <td><img class="table-img-ingredient" src="{{ asset(ingredient.image) }}" alt="{{ ingredient.label }}"></td>
      </tr>
    </tbody>
  </table>
</section>

<div class="modal-overlay" id="confirmModal">
  <div class="modal-content flex flex-column gap-15">
    <p>Êtes-vous sûr de vouloir supprimer cet ingrédient ?</p>
    <div class="flex justify-center gap-15">
      <button class="btn btn-red" id="confirmDelete">Supprimer</button>
      <button class="btn" id="cancelDelete">Annuler</button>
    </div>
  </div>
</div>
{% endblock %}