{% extends 'admin/admin-base.html.twig' %}

{% block main %}
<section class="flex pt-15 gap-7">
  <a class="btn" href="{{ path('admin_category_index') }}">Retour à la liste</a>
  <a class="btn" href="{{ path('admin_category_edit', { id: category.id }) }}">Modifier la catégorie</a>
  <a class="btn btn-red delete-action" data-url="{{ path('admin_category_delete', { id: category.id }) }}">
    Supprimer la catégorie
  </a>
</section>

<section class="flex flex-column pt-15 gap-15">
  <h1>{{ category.label }}</h1>

  <table class="table">
    <tbody>
      <tr>
        <th>ID</th>
        <td>{{ category.id }}</td>
      </tr>

      <tr>
        <th>Label</th>
        <td>{{ category.label }}</td>
      </tr>
    </tbody>
  </table>
</section>

<div class="modal-overlay" id="confirmModal">
  <div class="modal-content flex flex-column gap-15">
    <p>Êtes-vous sûr de vouloir supprimer cette catégorie ?</p>
    <div class="flex justify-center gap-15">
      <button class="btn btn-red" id="confirmDelete">Supprimer</button>
      <button class="btn" id="cancelDelete">Annuler</button>
    </div>
  </div>
</div>
{% endblock %}